
@{
	ViewData["Title"] = "Central";
}

@model IEnumerable<FileModel>;


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">

        <h1> <i class="bi bi-box2-fill"></i> Gerenciador</h1>
    </div>
    <a class="btn btn-warning table-hover" asp-controller="Emprestimo" asp-action="Cadastrar"> <i class="bi bi-file-earmark-diff"></i> Arquivos Enviados</a>
    <a class="btn btn-success table-hover" asp-controller="Emprestimo" asp-action="Cadastrar"> <i class="bi bi-cloud-arrow-up-fill"></i> Enviar Arquivos</a>



    <table id="Files" class="table table-light mt-5">
        <thead>
            <tr>
                <th scope="col">Arquivo</th>
                <th scope="col">Tamanho</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Data de Recebimento</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {

                @foreach (var file in Model)
                {
                    <tr>
                        <th scope="row">@file.filename</th>
                        <td>@file.size</td>
                        <td>@file.fornecedor</td>
                        <td>09/07/2024</td>
                        <td>
                            <a href="@Url.Action("DownloadFile", "Gerenciador", file.filename )" class="btn btn-success mx-2">
                                <i class="bi bi-download"></i> Download
                            </a>
                            <a asp-controller="Emprestimo" asp-action="Excluir"  class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Deletar</a>
                        </td>
                    </tr>
                }

            }


            </tr>
        </tbody>
    </table>

</div>

