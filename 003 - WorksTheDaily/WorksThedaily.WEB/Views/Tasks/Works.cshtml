@{
    TempData["Title"] = "Tasks";
}
@model IEnumerable<WorksTheDaily.API.View.TaskPO>



<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card bloco">
                    <div class="card-body">
                        @if (Enum.GetName(typeof(WorksTheDaily.API.Enums.EStatus), item.status) == "Novo")
                        {
                            <div style="background-color: green; width:245px; height: 10px"></div>
                            <div style="margin: 10px"></div>
                        }else
                        {
                            <div style="background-color: darkgoldenrod; width:245px; height: 10px"></div>
                            <div style="margin: 10px"></div>
                        }
                        <div style="background-color: beige; width:245px; height: 50px">
                            <h5 class="card-title">
                                @item.TaskName
                            </h5>
                        </div>
                        <h7 class="card-title">Nivel: @item.NivelPrioridade</h7>
                        <div style="height: 80px">
                            <p class="card-text">@item.Description</p>
                        </div>

                        <h5>Status: @item.status</h5>

                        
                        <div class="mb-5">

                            <a href="#" class="btn btn-primary">
                                <i class="bi bi-pen"></i>
                            </a>

                            <a href="#" class="btn btn-success">
                                <i class="bi bi-check-square-fill"></i>
                            </a>

                        </div>


                    </div>
                </div>
            </div>
        }
    </div>
</div>



